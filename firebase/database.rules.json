{
  "rules": {
    ".read": true,
     ".write": "auth.provider === 'google' && root.child('users').child(auth.uid).child('email').val().endsWith('manivan.iv@gmail.com')",
    "users": {
      "$user_id": {
        ".write": "auth.provider === 'google' && $user_id === auth.uid && newData.child('email').val().endsWith('manivan.iv@gmail.com')"
      }
    }
  }
}
